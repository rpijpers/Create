.media
{
	font-size: 12px;
	margin: 5px;
	margin-left:5px;
	margin-top: 0px;
	margin-right: 10px;
	text-align: right;
	float:left;	
	width: 156px;
	padding: 5px;	
	border: 2px solid #ddd;
	background-color: transparent;
	border-radius: 4px;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
}

.media img
{
	-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=75)";
	filter: alpha(opacity=75);
	opacity: .75;
}

.media img:hover
{
	-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=100)";
	filter: alpha(opacity=100);
	opacity: 1.00;
}

.media-nav
{
font-size: 12px;
	margin: 5px;
	margin-left:5px;
	margin-top: 0px;
	text-align: right;
	padding: 5px;	
	border: 1px solid #ddd;
	background-color: transparent;
	border-radius: 4px;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;	
}

/*
 * styling
 */

.images li{
display: inline;
}
 
 
div#gallery {
margin-top: -25px;
}

div#gallery div.items {
	overflow: hidden;
}

div#gallery span.delta {
	color: #969696;
	font-size: 80%;
	font-weight: normal;
	white-space: nowrap;
}



/* log-panel */
div#gallery div.items {
	padding-top: 2px;
}


div#gallery div.log-panel {
	padding-left: 2px;
	padding-bottom: 20px;
}

div#gallery div.log-panel div.state {
	margin-top: 0px;
	position: relative;
}

div#gallery div.log-panel textarea {
	width: 90%;
	height: 100px;
	font-weight: normal;
	font-size: 220%;
	font-family: Arial, Helvetica, sans-serif;
	color: #000000;
}

div#gallery div.log-panel textarea.loading {
	background: url(../images/spinner.gif) 99% 3px no-repeat;
}

div#gallery div.log-panel div.state span.delta {
	position: absolute;
	bottom: 5px;
	left: 15px;
}

div#gallery div.log-panel select.project {
	margin-right: 5px;
	width: 100%;
}

div#gallery div.log-panel select.task {
	width: 0px;
}

div#gallery div.log-panel option.option1 {
	color: #969696;
}

div#gallery div.log-panel option.option2 {
	background: #e6e6e6;
}

div#gallery div.log-panel select.hours,
div#gallery div.log-panel select.minutes {
	margin-right: 5px;
}

div#gallery div.log-panel div.project-description {
	width: 90%;
	background: #f9f9f9;
	border: 1px solid #c8c8c8;
	padding: 5px;
}

div#gallery div.log-panel div.project-description h1 {
    margin-bottom: 5px;
    font-size: 130%;
    line-height: 130%;
    color: #78a546;
    font-weight: normal;
}





div#gallery div.loading {
	background: url(../images/spinner.gif) 99% 3px no-repeat;
}



.ninja-button-wrap {
	border: black 1px solid;
	display: inline-block;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
}

.ninja-button, a.ninja-button:link, a.ninja-button:visited {
	background: transparent url(../images/button_bg.png) repeat-x center right;
	display: inline-block;
	color: hsl(0, 0%, 39%);
	font-size: 11px;
	height: 23px;
	line-height: 18px;
	text-decoration: none;
	
	text-shadow: black 0 -1px 0;
	padding: 0;
	
	/* An opera quirk requires us to use an negative text indent, and correct it with extra left padding */
	padding-left: 10px;
	
	padding-right: 35px;
	margin: 0;
	border: 1px rgb(90, 90, 89) solid;
	-webkit-border-radius: 2px;
	-moz-border-radius: 2px;
	border-radius: 2px;
	-webkit-transition: all 300ms ease-out;
	-moz-transition: all 300ms ease-out;
	-o-transition: all 300ms ease-out;
	transition: all 300ms ease-out;
}
a.ninja-button, a.ninja-button:link, a.ninja-button:visited {
	line-height: 23px;
}
.ninja-button:hover, a.ninja-button:hover, a.ninja-button:link:hover, a.ninja-button:visited:hover {
	background-position: top right;
	color: hsl(0, 0%, 29%);
	text-shadow: black 0 1px 0;
	-webkit-transition: all 300ms ease-in;
	-moz-transition: all 300ms ease-in;
	-o-transition: all 300ms ease-in;
	transition: all 300ms ease-in;
	text-decoration: none;
}
.ninja-button:active, a.ninja-button:active, a.ninja-button:link:active, a.ninja-button:visited:active {
	background-position: bottom right;
	color: white;
	text-shadow: white 0 1px 10px;
	-webkit-transition: all 0s;
	-moz-transition: all 0s;
	-o-transition: all 0s;
	transition: all 0s;
}
/* Removing firefox's ugly dotted border */
.ninja-button:focus, .ninja-button:active, .ninja-button:active:hover { 
    outline: none!important; 
}
.ninja-button-wrap.light {
	display: block;
	border-color: lightgray;
}
.ninja-button.light, a.ninja-button.light, .ninja-button.light:link, a.ninja-button.light:visited {
	background-image: url(../images/button_light_bg.png);
	border-color: #F3F3F3;
	text-indent: 0;
	padding-left: 0;
	padding-right: 0;
	display: block;
	text-align: center;
	text-shadow: hsla(0, 0%, 95%, .8) 0 1px 0;
}
.ninja-button.light:hover, a.ninja-button.light:hover, a.ninja-button.light:link:hover, a.ninja-button.light:visited:hover {
	text-shadow: hsla(0, 0%, 95%, .8) 0 1px 0;
}
.ninja-button.light:active, a.ninja-button.light:active, a.ninja-button.light:link:active, a.ninja-button.light:visited:active {
	color: hsl(0, 0%, 29%);
	text-shadow: hsla(0, 0%, 5%, .2) 0 1px 0;
	text-decoration: none;
}

.ninja-button-wrap.light.active {
	background: url(../images/spinner.gif) no-repeat center;
}
.ninja-button-wrap.light.active .ninja-button.light {
	background-image: none;
	color: transparent;
	text-shadow: none;
	-webkit-transition: all 0s;
	-moz-transition: all 0s;
	-o-transition: all 0s;
	transition: all 0s;
}
.ninja-button-wrap.inactive {
	height: 0px;
	visibility: hidden;
}

/*modal*/

.body-overlayed embed, .body-overlayed object, .body-overlayed select
{
	visibility:				hidden;
}

#sbox-window embed, #sbox-window object, #sbox-window select
{
	visibility:				visible;
}

#sbox-overlay
{
	position:				absolute;
	background-color:		#ddd;
}

#sbox-window
{
	position:				absolute;
	background-color:		#f7f7f7;
	text-align:				left;
	overflow:				visible;
	padding:				10px;
	-moz-border-radius:		10px;
	-webkit-border-radius:		10px;
}

* html #sbox-window
{
	top: 50% !important;
	left: 50% !important;
}

#sbox-btn-close
{
	position:				absolute;
	width:					31px;
	height:					31px;
	right:					-12px;
	top:					-13px;
	background:				url(../images/closebox.png) no-repeat top left;
	border:					none;
}

.sbox-loading #sbox-content
{
	background-image:		url(../images/ajax-loader.gif);
	background-repeat:		no-repeat;
	background-position:	center;
}

#sbox-content
{
	clear:					both;
	overflow:				auto;
	background-color:		#fff;
	height:					100%;
	width:					100%;
}

.sbox-content-image#sbox-content
{
	overflow:				visible;
}

#sbox-image
{
	display:				block;
}

.sbox-content-image img
{
	display:				block;
}

.sbox-content-iframe#sbox-content
{
	overflow:				visible;
}


/*image caption*/
ul.images { overflow: hidden; padding: 5px; }
ul.images > li {
    position: relative;
    float: left;
    list-style: none;
    margin: 0 0px 0px 0;
    font-size: 10px;
}
ul.images a { text-decoration: none; display: block; }
ul.images li img { display: block; position: relative;}
ul.images li:not([class=na]) img { position: static; }
ul.images a:hover, ul a:focus
{
    display: block;
    outline: none;   
}
ul.images a:hover img, ul a:focus img { }
ul.images a:hover:after,
ul.images a:focus:after
{
    content: attr(rev);
    color: #000;
    position: absolute;
    bottom: 0;
    height: 25px;
    line-height: 25px;
    text-align: center;
    font-weight: bold;
    width: 143px;
	margin-left:11px;
	margin-bottom: 15px;
    background: rgb(30,82,140); 
	background: rgba(30, 82, 140, 0.7);
	background: -moz-linear-gradient(top, rgba(30, 82, 140, 0.7), rgba(43, 117, 200, 0.7)); /* Firefox 3.6+ */
	background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(rgba(30, 82, 140, 0.7)), to(rgba(43, 117, 200, 0.7))); /* Safari */
	color: #fff;
	text-shadow: 1px 1px 1px #000;
}